@model IEnumerable<UsersModel>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @ViewData["Title"]
</h2>

<div class="card">
    <div class="card-header">
        Lista de Usuarios
    </div>
    <div class="card-body">
        <a asp-action="NewOrEdit" asp-controller="Users" class="btn btn-success"><i class="bi bi-plus"></i> Crear nuevo usuario</a>
        <table>
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username_User</td>
                        <td>@user.Password_User</td>
                        <td>@user.Email_User</td>
                        <td>@user.Status_User</td>
                        <td>@user.Nombre_User</td>
                        <td>@user.Apellidos_User</td>
                        <td>
                            <a asp-action="NewOrEdit" asp-controller="Users" asp-route-oUserIdContacto="@user.Id_User" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-action="Delete" asp-controller="Users" asp-route-oUserIdContacto="@user.Id_User" class="btn btn-danger"><i class="bi bi-x-square"></i> Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>